@model quanlykytuc.Models.Room
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<<main id="main" class="main">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Chỉnh sửa phòng</h5>
               
            </div>
            <form asp-action="Edit" method="post">
                <input type="text" class="form-control mb-3" asp-for="RoomID" type="hidden" />
                <div asp-validation-summary="All"></div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="RoomName" class="form-label" for="basic-default-fullname">Tên Phòng</label>
                        <input asp-for="RoomName" type="text" class="form-control" id="basic-default-fullname" placeholder="Nhập tên phòng" />
                        <span asp-validation-for="RoomName" class="text-danger"></span>
                    </div>

                    @* <div class="mb-3">
                        <label asp-for="Price" class="form-label" for="basic-default-company">Giá phòng</label>
                        <input asp-for="Price" type="text" class="form-control" id="basic-default-company" placeholder="Nhập giá" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div> *@
                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label" for="basic-default-company">Số người ở</label>
                        <input asp-for="Quantity" type="text" class="form-control" id="basic-default-company" placeholder="Nhập số người ở" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Max" class="form-label" for="basic-default-company">tối đa</label>
                        <input asp-for="Max" type="text" class="form-control" id="basic-default-company" placeholder="Nhập người tối đa" />
                        <span asp-validation-for="Max" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label" for="basic-default-company">mô tả</label>
                        <input asp-for="Description" type="text" class="form-control" id="basic-default-company" placeholder="Nhập mô tả" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                   
                    <a asp-controller="Room" asp-action="Index"> <button type="button" class="btn btn-primary">Quay lại</button></a>
                    <button type="submit" class="btn btn-primary"><i class="menu-icon tf-icons bx bx-dock-top"></i>Lưu</button>
                </div>
            </form>

        </div>
    </div>
</main>
