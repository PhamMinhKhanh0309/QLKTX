@using quanlykytuc.Utilities
@model quanlykytuc.Models.RoomCostPrice
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Sửa chi phí</h5>
                
            </div>
            <div class="card-body">
                <form method="post" asp-action="Edit">
                    <input type="text" class="form-control mb-3" asp-for="RoomCostID" type="hidden" />
                    <div asp-validation-summary="All"></div>
                    <div class="mb-3">
                        <label asp-for="RoomID" for="defaultSelect" class="form-label">Phòng</label>
                        <select asp-for="RoomID" id="defaultSelect" class="form-select"
                                asp-items="@(new SelectList(ViewBag.RoomList,"Value","Text"))">
                        </select>
                        <span asp-validation-for="RoomID" class="alert-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Month" for="monthSelect" class="form-label">Chi phí tháng</label>
                        <select asp-for="Month" id="monthSelect" class="form-select">
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Year" for="yearSelect" class="form-label">Chi phí năm</label>
                        <select asp-for="Year" id="yearSelect" class="form-select">
                            @for (int i = DateTime.Now.Year - 5; i <= DateTime.Now.Year; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RoomCost" class="form-label" for="basic-default-fullname">Tiền phòng</label>
                        <input asp-for="RoomCost" type="text" class="form-control" id="basic-default-fullname" placeholder="Nhập tiền phòng" />
                        <span asp-validation-for="RoomCost" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ElectricityCost" class="form-label" for="basic-default-fullname">Tiền điện</label>
                        <input asp-for="ElectricityCost" type="text" class="form-control" id="basic-default-fullname" placeholder="Nhập tiền điện" />
                        <span asp-validation-for="ElectricityCost" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="WaterCost" class="form-label" for="basic-default-fullname">Tiền nước</label>
                        <input asp-for="WaterCost" type="text" class="form-control" id="basic-default-fullname" placeholder="Nhập tiền nước" />
                        <span asp-validation-for="WaterCost" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="OtherCost" class="form-label" for="basic-default-fullname">Chi phí khác</label>
                        <input asp-for="OtherCost" type="text" class="form-control" id="basic-default-fullname" placeholder="Nhập chi phí khác" />
                        <span asp-validation-for="OtherCost" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <a asp-controller="RoomCost" asp-action="Index">  <button type="button" class="btn btn-primary">Quay lại</button></a>

                </form>
            </div>
        </div>
    </div>
</main>
@{
    var summerNote = new quanlykytuc.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}