@using quanlykytuc.Utilities
@model quanlykytuc.Models.Notification
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<main id="main" class="main">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Thêm mới menu</h5>
                <small class="text-muted float-end">Default label</small>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Edit">
                    <input type="text" class="form-control mb-3" asp-for="NoticeID" type="hidden" />
                    <div asp-validation-summary="All"></div>
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label" for="basic-default-fullname">Tiêu đề</label>
                        <input asp-for="Title" type="text" class="form-control" id="basic-default-fullname" placeholder="Nhập tiêu đề" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Contents">Content</label>
                        <textarea asp-for="Contents" class="form-control"></textarea>
                    </div>

                    <div class="form-group d-none">
                        <input asp-for="Created_At" class="form-control" value="@Functions.getCurrentDate()" />
                    </div>

                    <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" @Html.CheckBox("IsActive", Model.IsActive)
                        <label class="form-check-label" for="flexSwitchCheckDefault">  Hiện thị lên trang web</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <a asp-controller="Notification" asp-action="Index">  <button type="button" class="btn btn-primary">Quay lại</button></a>

                </form>
            </div>
        </div>
    </div>
</main>
@{
    var summerNote = new quanlykytuc.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}