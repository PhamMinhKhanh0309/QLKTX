@model quanlykytuc.Models.RoomCostViewModel


<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Thông tin /</span> Chi phí</h4>
        
        <div class="card shadow-sm">
            <div class="card-header" style="background-color: #007bff; color: #f8f9fa;">
                <h2><span class="badge bg-dark">Chi phí @Model.Month/@Model.Year</span></h2>
                <h3><span class="badge bg-info">Phòng @Model.RoomName</span></h3>
            </div>

            
            <div class="card-body">
                <!-- Check if there's any cost information -->
                @if (Model.TotalCost > 0)
                {
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th><span class="badge bg-dark" style="font-size: 15px">Kiểu chi phí</span></th>
                                <th class="text-end" style="font-size: 15px"><span class="badge bg-danger">Số tiền</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Giá phòng</td>
                                <td class="text-end">@Model.RoomCost.ToString("C")</td>
                            </tr>
                            <tr>
                                <td>Tiền điện</td>
                                <td class="text-end">@Model.ElectricityCost.ToString("C")</td>
                            </tr>
                            <tr>
                                <td>Tiền nước</td>
                                <td class="text-end">@Model.WaterCost.ToString("C")</td>
                            </tr>
                            <tr>
                                <td>Chi phí khác</td>
                                <td class="text-end">@Model.OtherCost.ToString("C")</td>
                            </tr>
                            <tr class="table-active">
                                <td><strong>Tổng chi phí</strong></td>
                                <td class="text-end"><strong>@Model.TotalCost.ToString("C")</strong></td>
                            </tr>
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        <strong>Không có chi phí trong tháng này.</strong>
                    </div>
                }
            </div>
            
            <!-- Form to filter by month and year -->
            <div class="card-footer">
                <form method="get" action="/RoomCost/Index" class="row g-3">
                    <div class="col-md-6">
                        <label for="month" class="form-label">Tháng:</label>
                        <select name="month" id="month" class="form-select">
                                @for (int i = 1; i <= 12; i++)
                                {
                                    if (i == Model.Month)
                                    {
                                        <option value="@i" selected="selected">Tháng @i</option>
                                    }
                                    else
                                    {
                                        <option value="@i">Tháng @i</option>
                                    }
                                }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="year" class="form-label">Năm:</label>
                        <input type="number" name="year" id="year" value="@Model.Year" class="form-control" />
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Lọc</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

